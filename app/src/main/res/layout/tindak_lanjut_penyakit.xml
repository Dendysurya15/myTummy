<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_tindak"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/logo_tindak" />

    <TextView
        android:id="@+id/fitur2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_tindak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_barruuu"
        android:text="Tindak Lanjut Penyakit Perut"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/fitur_warna_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/penjelasan2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitur2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_barruuu"
        android:gravity="center"
        android:text="@string/tindak_lanjut"
        android:textColor="@color/penjelasan_warna_text"
        android:textSize="15sp" />
</RelativeLayout>