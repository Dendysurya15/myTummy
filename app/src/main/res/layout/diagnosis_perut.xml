<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_color"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_diagnosis"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/diagnosis_empat" />

    <TextView
        android:id="@+id/fitur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_diagnosis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/fitur_warna_text"
        android:textSize="20sp"
        android:fontFamily="@font/font_barruuu"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="Diagonosis Penyakit" />

    <TextView
        android:id="@+id/penjelasan"
        android:layout_width="310dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitur"
        android:textColor="@color/penjelasan_warna_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/font_barruuu"
        android:layout_marginTop="10dp"
        android:text="@string/diagnosis_perut" />
</RelativeLayout>