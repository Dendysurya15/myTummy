<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_edukasi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logo_edukasi"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/fitur4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_edukasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_barruuu"
        android:text="Edukasi Seputar Penyakit Perut"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/fitur_warna_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/penjelasan4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fitur4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_barruuu"
        android:gravity="center"
        android:text="@string/edukasi_text"
        android:textColor="@color/penjelasan_warna_text"
        android:textSize="15sp" />
</RelativeLayout>