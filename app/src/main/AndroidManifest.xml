        android:allowBackup="true"
        android:icon="@drawable/icon_laucher_insyallah_fix"
        android:label="My Tummy"
        android:roundIcon="@drawable/icon_laucher_insyallah_fix"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Fitur_Edukasi"></activity>
        <activity android:name=".Fitur_Rekomendasi_Obat" />
        <activity android:name=".Fitur_Tindak_lanjut" />
        <activity android:name=".Fitur_Diagnosis" />
        <activity android:name=".AboutUsFragment" />
        <activity android:name=".HomeFragment" />
        <activity
            android:name=".IntroSlider"
            android:theme="@style/slider_screen" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/color_splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>